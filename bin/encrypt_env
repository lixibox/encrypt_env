#!/usr/bin/env ruby

# frozen_string_literal: true

require 'encrypt_env'

argv = ARGV
action = argv.shift

if action == 'setup'
  EncryptEnv.setup
  exit 0
elsif action == 'show'
  EncryptEnv.show
  exit 0
elsif action == 'all'
  EncryptEnv.show_all
  exit 0
elsif action == 'edit'
  EncryptEnv.edit
  exit 0
elsif ['help', '--help', '-h'].include?(action)
  puts <<~HELP
    Usage:
      encrypt_env setup
      encrypt_env secrets
      encrypt_env secrets_all
      encrypt_env edit
  HELP

  exit 0
else
  puts "Unknown action: #{action}"
  exit 1
end
